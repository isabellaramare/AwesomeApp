<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AwesomeApp.MainPage" 
    BackgroundColor="#00DCFF">

    <StackLayout 
        Padding="10,0,10,50" 
        Margin="10,50">
        <Label 
            Text="The Outfitter"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand" 
            TextColor="#F0FF00" 
            FontSize="70" 
            HorizontalTextAlignment="Start" Padding="40,0" />
        <Button 
            Text="Outfitter" 
            Clicked="Handle_Clicked" 
            TextColor="#00DCFF" 
            BackgroundColor="#F0FF00" 
            FontAttributes="Bold" 
            Margin="100,5"/>
        <Button 
            Text="Wardrobe" 
            Clicked="Wardrobe_Clicked" 
            TextColor="#00DCFF" 
            BackgroundColor="#F0FF00" 
            FontAttributes="Bold" 
            Margin="100,5"/>
    </StackLayout>

</ContentPage>
